@using OficinaWebMVC.Enums;
@model OficinaWebMVC.Models.MotoModel;


@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Veiculo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateMoto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Placa" class="control-label"></label>
                <input asp-for="Placa" class="form-control" />
                <span asp-validation-for="Placa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ano" class="control-label"></label>
                <input asp-for="Ano" class="form-control" />
                <span asp-validation-for="Ano" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CodChassi" class="control-label"></label>
                <input asp-for="CodChassi" class="form-control" />
                <span asp-validation-for="CodChassi" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ModeloMoto" class="control-label"></label>
                <select asp-for="ModeloMoto" asp-items="Html.GetEnumSelectList<ModeloMoto>()" class="form-control"></select>
                <span asp-validation-for="ModeloMoto" class="text-danger"></span>
            </div>
    <div class="form-group">
        <input type="submit" value="Criar Moto" class="btn btn-primary" />
    </div>
    </form>
</div>
</div>

<div>
    <a asp-action="Index">Retorna a Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
